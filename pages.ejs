<!doctype html>
<html lang="en">
  <%- include('partials/head', { title: 'Pages', extraCss: ['pages.css'] }) %>
  <body>
    <%- include('partials/header') %>
    <main class="layout">
      <aside class="sidebar"><nav><a href="/">Home</a><a href="/tasks">Tasks</a></nav></aside>
      <section class="content">
        <h2>Pages & Blocks</h2>
        <div class="card">
          <div class="row">
            <input id="pageTitle" class="input" placeholder="Page title" />
            <button id="addPage" class="btn">Create</button>
          </div>
          <ul id="pagesList"></ul>
        </div>

        <div id="editor" class="card" style="display:none">
          <h3 id="editorTitle"></h3>
          <div id="blocks" class="blocks"></div>
          <div class="row"><button id="addTextBlock" class="btn">+ Text</button><button id="addCheckBlock" class="btn">+ Checklist</button></div>
        </div>
      </section>
    </main>
    <%- include('partials/footer', { extraJs: ['pages.js'] }) %>
  </body>
</html>
