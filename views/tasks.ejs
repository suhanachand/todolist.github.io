<!doctype html>
<html lang="en">
  <%- include('partials/head', { title: 'Tasks', extraCss: ['tasks.css'] }) %>
  <body>
    <%- include('partials/header') %>
    <main class="layout">
      <aside class="sidebar">
        <nav>
          <a href="/">Home</a>
          <a href="/pages">Pages</a>
          <a href="/pomodoro">Pomodoro</a>
          <a href="/routine">Routine</a>
        </nav>
      </aside>
      <section class="content">
        <h2>To-Do</h2>
        <div class="card">
          <div class="row">
            <input id="taskTitle" class="input" placeholder="Task title" />
            <input id="taskTag" class="input" placeholder="Tag (School, Personal)" style="width:140px" />
            <input id="taskDue" class="input" type="date" />
            <button id="addTaskBtn" class="btn">Add</button>
          </div>
        </div>

        <div id="tasksContainer" class="card"></div>
        <div class="card small-muted">
          <button id="exportTasks" class="icon">Export Tasks</button>
          <input id="importTasksFile" type="file" style="display:none" />
        </div>
      </section>
    </main>
    <%- include('partials/footer', { extraJs: ['tasks.js'] }) %>
  </body>
</html>
